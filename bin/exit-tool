#!/bin/bash

lock()
{
  lock-system
  return
}

logout()
{
  if [ -n "$SWAYSOCK" ] && command -v swaymsg >/dev/null; then
    $msgcmd=swaymsg
  elif [ -n "$I3SOCK" ] && command -v i3-msg >/dev/null; then
    $msgcmd=i3-msg
  else
    echo "Cannnot Logout!"
    return
  fi
  $msgcmd exit
  return
}

reboot()
{
  systemctl reboot
  return
}

shutdown()
{
  systemctl poweroff
  return
}

usage()
{
  echo "$0 (lock|logout|reboot|shutdown)"
  return
}

case "$1" in
  lock)
    lock
    ;;
  logout)
    logout
    ;;
  reboot)
    reboot
    ;;
  shutdown)
    shutdown
    ;;
  *)
    usage
    exit 2
    ;;
esac

exit 0
